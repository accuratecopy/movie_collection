{% extends 'layout.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1>{{ tvShowResultsNumber }} série TV avec les mots clés "{{ searchData }}" :</h1>
        </div>
        <div class="row">
        {% for tvShowResult in tvShowResults %}
            <div class="col-2 mb-3">
                <div class="card text-white">
                    <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2{{ tvShowResult.poster_path }}" class="card-img-top poster" alt="{{ tvShowResult.name }}_poster">
                    <div class="card-body">
                        <h5 class="card-title">{{ tvShowResult.name }}</h5>
                        <a href="{{ path('tv_show_show', {'tvShowId': tvShowResult.id }) }}" class="btn btn-outline-info btn-sm mb-2"><i class="fas fa-film"></i> Voir la série TV</a>
                        <a href="{{ path('tv_show_add', {'tvShowId': tvShowResult.id}) }}" class="btn btn-outline-success btn-sm mb-2"><i class="fas fa-folder-plus"></i> Ajouter à la
                            collection</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}