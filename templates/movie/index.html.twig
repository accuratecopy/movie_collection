{% extends 'layout.html.twig' %}

{% block title %}Ma Collection{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Ma Collection</h1>
    <div class="row">
        {% for movieJson in movieJsons %}
        <div class="col-2">
            <div class="card text-white">
                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2{{ movieJson.poster_path }}" class="card-img-top poster" alt="{{ movieJson.title }}_poster">
                <div class="card-body">
                    <h5 class="card-title">{{ movieJson.title }}</h5>
                    <a href="{{ path('movie_show', {'movieId': movieJson.id }) }}" class="btn btn-outline-info btn-sm mb-2"><i class="fas fa-film"></i> Voir le film</a>
                    <a href="{{ path('movie_remove', {'movieId': movieJson.id }) }}" class="btn btn-outline-danger btn-sm mb-2"><i class="far fa-trash-alt"></i> Supprimer de la collection</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
