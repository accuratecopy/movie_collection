{% extends 'layout.html.twig' %}

{% block title %}Index - Liste des films les plus populaires{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
    {% for popularMovie in popularMovies %}
        <div class="col">
            <div class="card mb-5" style="width: 24rem;">
                <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2{{ popularMovie.poster_path }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ popularMovie.title }}</h5>
                    <p class="card-text">Nom d'origine : {{ popularMovie.original_title }}</p>
                    <p class="card-text">{{ popularMovie.overview }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h5>Date de sortie : {{ popularMovie.release_date }}</h5>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="#" class="btn btn-info"><i class="fas fa-film"></i> Voir le film</a>
                    <a href="#" class="btn btn-info"><i class="fas fa-folder-plus"></i> Ajouter Ã  la collection</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
