{% block title %}The Movie Collection{% endblock %}

{% block body %}
    <div class="home_background">
        <div class="container-fluid">
            <div class="row justify-content-center">
            {{ form_start(form) }}
            {{ form_errors(form) }}

                {{ form_row(form.search) }}
                {{ form_widget(form.media_type) }}
                {{ form_widget(form.search_type_field) }}
                {{ form_widget(form.search_type) }}
